<form class="flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Nome da Armadura"/></h1>
    </div>
  </header>

  <section class="sheet-body">
    <div class="form-group">
      <label>Tipo:</label>
      <select name="system.tipo">
        <option value="Armadura Leve" {{#if (eq system.tipo "Armadura Leve")}}selected{{/if}}>Armadura Leve</option>
        <option value="Armadura Média" {{#if (eq system.tipo "Armadura Média")}}selected{{/if}}>Armadura Média</option>
        <option value="Armadura Pesada" {{#if (eq system.tipo "Armadura Pesada")}}selected{{/if}}>Armadura Pesada</option>
        <option value="Blindagem Leve" {{#if (eq system.tipo "Blindagem Leve")}}selected{{/if}}>Blindagem Leve</option>
        <option value="Blindagem Média" {{#if (eq system.tipo "Blindagem Média")}}selected{{/if}}>Blindagem Média</option>
        <option value="Blindagem Pesada" {{#if (eq system.tipo "Blindagem Pesada")}}selected{{/if}}>Blindagem Pesada</option>
      </select>
    </div>

    <div class="form-group">
      <label>Nível de Proteção:</label>
      <input type="number" name="system.protecao" value="{{system.protecao}}" min="0" />
    </div>

    <div class="form-group">
      <label>Peso (kg):</label>
      <input type="number" name="system.peso" value="{{system.peso}}" min="0" step="0.1" />
    </div>

    <div class="form-group">
      <label>Especial:</label>
      <textarea name="system.especial" rows="3">{{system.especial}}</textarea>
    </div>

    <div class="form-group">
      <label>Descrição:</label>
      <textarea name="system.descricao" rows="4">{{system.descricao}}</textarea>
    </div>
  </section>
</form>
